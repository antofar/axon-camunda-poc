[
    {
        "name": "Issue a command",
        "id": "com.plexiti.commons.application.Command",
        "appliesTo": [
            "bpmn:ServiceTask",
            "bpmn:SendTask"
        ],
        "properties": [
            {
                "label": "Bean Binding",
                "type": "Hidden",
                "value": "${command}",
                "editable": false,
                "binding": {
                    "type": "property",
                    "name": "camunda:delegateExpression"
                }
            },
            {
                "label": "Command",
                "description": "Enter full class name or explicit name",
                "type": "String",
                "binding": {
                    "type": "camunda:property",
                    "name": "command"
                },
                "constraints": {
                    "notEmpty": true
                }
            }
        ],
        "entriesVisible": {
            "_all": true,
            "camunda:modelerTemplate": true
        }
    },
